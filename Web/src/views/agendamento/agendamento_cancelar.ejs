<div class="new-user-wrapper">
  <div class="card new-user-card">
    <h3>Cancelar consulta por ID</h3>
    <% if (ok) { %><p class="msg-ok"><%= ok %></p><% } %>
    <% if (error) { %><p class="msg-error"><%= error %></p><% } %>
    <form method="POST" action="/admin/agendamentos/cancelar" class="form new-user-form">
      <input class="input" name="appointmentId" placeholder="ID da consulta" required />
      <div class="form-actions">
        <a class="btn" href="/admin/agendamentos">Voltar</a>
        <button class="btn btn--outline" type="submit">Cancelar consulta</button>
      </div>
    </form>
  </div>
</div>
