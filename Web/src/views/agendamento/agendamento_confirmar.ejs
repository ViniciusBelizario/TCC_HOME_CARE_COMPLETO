<%- include('../layouts/top', { active, title: 'Agendamentos â€” Confirmar consulta' }) %>
<div class="new-user-wrapper">
  <div class="card new-user-card">
    <h3>Confirmar consulta por ID</h3>
    <% if (ok) { %><p class="msg-ok"><%= ok %></p><% } %>
    <% if (error) { %><p class="msg-error"><%= error %></p><% } %>
    <form method="POST" action="/admin/agendamentos/confirmar/0" class="form new-user-form" onsubmit="
      this.action = '/admin/agendamentos/confirmar/' + this.appointmentId.value; return true;">
      <input class="input" name="appointmentId" placeholder="ID da consulta" required />
      <div class="form-actions">
        <a class="btn" href="/admin/agendamentos">Voltar</a>
        <button class="btn btn-primary" type="submit">Confirmar</button>
      </div>
    </form>
  </div>
</div>
<%- include('../layouts/bottom') %>
