<%- include('../layouts/top', { active, title: 'Agendamentos — Horário Específico' }) %>

<div class="new-user-wrapper">
  <div class="card new-user-card">
    <h3>Criar horário específico</h3>

    <% if (ok) { %><p class="msg-ok"><%= ok %></p><% } %>
    <% if (error) { %><p class="msg-error"><%= error %></p><% } %>

    <form method="POST" action="/admin/agendamentos/novo" class="form new-user-form" autocomplete="off">
      <div class="form-grid">
        <select class="input" name="doctorId" required>
          <option value="">Selecione o médico</option>
          <% (doctors||[]).forEach(d => { %>
            <option value="<%= d.id %>"><%= d.name %> — <%= d.specialty %> (<%= d.crm %>)</option>
          <% }) %>
        </select>
        <input class="input" type="datetime-local" name="startsAt" required />
        <input class="input" type="datetime-local" name="endsAt" required />
      </div>

      <div class="form-actions">
        <a class="btn" href="/admin/agendamentos">Voltar</a>
        <button class="btn btn-primary" type="submit">Criar</button>
      </div>
    </form>
  </div>
</div>

<%- include('../layouts/bottom') %>
